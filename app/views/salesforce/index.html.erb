<h1><%= @current_client.FirstName__c %>'s Salesforce Record</h1>

<table>
	<tbody>
		<% @current_client.each do |key, value| %>
		   <%  unless ['attributes', 'Name'].include?( key ) %>
				<tr>
					<td> <%= key.sub '__c', '' %> </td> 
					<td> <%= value %> </td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>


