    <%= bootstrap_form_for(applicant, remote: true) do |f| %>
      <div id="<%=section_name%>" class="section hide">
        <%= render "main_form/#{section_name}_section", builder: f, applicant: applicant %>
      <hr />
      <%= f.button("Update", { class:"btn btn-default" }) %>
