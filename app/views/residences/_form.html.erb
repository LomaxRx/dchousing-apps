<%= bootstrap_form_for(residence) do |f| %>
  <% if residence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(residence.errors.count, "error") %> prohibited this residence from being saved:</h2>

      <ul>
      <% residence.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <h4>Where</h4>
      <%= f.fields_for :address do |builder| %>
        <%= render "addresses/fields", builder: builder%>
      <% end %>
    </div>

    <div class="col-md-4">
      <h4>When</h4>
      <%= f.date_field :start %>
      <%= f.date_field :end %>
      <%= f.text_field :reason, label: "Reason for leaving" %>
    </div>

    <div class="col-md-4">
      <h4>Landlord</h4>
      <%= f.fields_for :landlord do |builder| %>
        <%= render "people/name", builder: builder %>
        <%= render "people/contact", builder: builder %>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
