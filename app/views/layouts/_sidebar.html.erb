<div id="sidebar" class="span2">
  <%= link_to image_tag("district-housing-logo-transparent-full.png", :class => "logo"), root_path %>

  <div class="button-group">
    <div class="side-button"><div class="button-text"><%= link_to content_tag(:div, "Home"), root_path %></div></div>
    <% if current_user && current_user.is_admin? %>
      <div class="side-button"><div class="button-text"><%= link_to content_tag(:div, "Salesforce"), salesforce_index_path %></div></div>
    <% end %>
    <% unless current_user %>
      <div class="side-button"><div class="button-text"><%= link_to content_tag(:div, "Apply"), new_user_registration_path %></div></div>
    <% end %>
    <div class="side-button"><div class="button-text"><%= link_to content_tag(:div, "About"), about_path %></div></div>
    <% if current_user %>
      <div class="side-button"><div class="button-text"><%= link_to content_tag(:div, "Sign Out"), destroy_user_session_path, :method => "delete" %></div></div>
    <% end %>
  </div>

</div>
