<%= bootstrap_form_for(applicant, remote: true) do |f| %>
  <div id="demographic" class="section hide">
    <%= render "form_picker/demographic_section", builder: f %>
    <hr />
    <%= f.button("Update", { class:"btn btn-default" }) %>
    <hr />
    <%= render "section_buttons", next_section: "household" %>
  </div>
  <div id="household" class="section hide">
    <%= render "form_picker/household_section", builder: f, applicant: applicant %>
    <hr />
    <%= f.button("Update", { class:"btn btn-default" }) %>
    <hr />
    <%= render "section_buttons", next_section: "residential_history", previous_section: "demographic" %>
  </div>
  <div id="residential_history" class="section hide">
    <%= render "form_picker/residential_history_section", builder: f, applicant: applicant %>
    <hr />
    <%= f.button("Update", { class:"btn btn-default" }) %>
    <hr />
    <%= render "section_buttons", next_section: "income_employment", previous_section: "household" %>
  </div>
<% end %>
<hr />
<div id="download">
  <%= button_to 'Download forms', "/download", { class:"btn btn-default btn-lg download-forms" } %>
</div>
<div id="download-warning" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h3><span class="glyphicon glyphicon-warning-sign"></span>Important!</h3>
        </div>
      <div class="modal-body">
        <div class="well alert-danger">Remember to proofread the forms for completeness and accuracy after you download them. Do not sign the forms as you will need to do so in front of the building management upon submission.</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
      </div>
    </div>
  </div>
</div>
